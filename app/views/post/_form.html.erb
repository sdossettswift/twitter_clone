<% if @post.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <% @post.errors.full_messages.each do |msg| %>
      <%= msg %><br>
    <% end %>
  </div>
<% end %>

<div class="well">

<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.label :message %>
    <%= f.text_field :message, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit class: "btn btn-lg btn-primary"%>
  </div>
<% end %>
</div>
